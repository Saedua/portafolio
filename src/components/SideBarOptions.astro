---
interface Props {
    title: string;
    icon: string;
    href: string;
}

const { title, icon, href } = Astro.props as Props;
const currentPath = Astro.url.pathname;

// Detectar si esta opción está activa
const isActive = currentPath === href || (href !== '/' && currentPath.startsWith(href));
---

<a 
    href={href}
    class={`flex items-center px-5 py-3 text-gray-700 hover:bg-cyan-100 hover:text-cyan-600 hover:border-l-4 hover:border-cyan-600 transition-all duration-300 cursor-pointer ${isActive ? 'bg-cyan-100 text-cyan-600 border-l-4 border-cyan-600 pl-4 font-semibold' : ''}`}
>
    <div class="w-6 h-6 mr-4 flex items-center justify-center text-lg">
        <img src={icon} alt={title} class="w-5 h-5" />
    </div>
    <div class="flex-1 text-base">{title}</div>
</a>