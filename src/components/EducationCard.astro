---
interface Props{
    title: string,
    description: string,
    color: string,
    tagTitle: string,
    year: string
}

const { title, description, color, tagTitle, year } = Astro.props as Props;
---

<div
            class="bg-white bg-opacity-5 rounded-2xl p-6 border" style={`border: solid; border-color:${color}`}
          >
            <div
              class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-3"
            >
              <h3 class="text-2xl font-bold" style={`color: ${color}`}>
                {title}
              </h3>
              <span
                class="text-sm font-semibold text-gray-100 bg-gray-700 px-4 py-1 rounded-full mt-2 sm:mt-0"
              >
                {year}
              </span>
            </div>
            <p class="text-black font-medium text-lg">
              {description}
            </p>
            <div class="mt-3">
              <span
                class="inline-block px-3 py-1 text-white font-bold rounded-lg text-md" style={`background-color: ${color}`}
              >
                {tagTitle}
              </span>
            </div>
          </div>