---
import type { Technology } from "../interfaces/interface";

interface Props {
  title: string;
  color: string;
  icon: string;
  skills: Technology[];
}

const { title, color, icon, skills } = Astro.props as Props;
---

<div
  class="bg-white bg-opacity-5 rounded-2xl p-6 hover:border-opacity-60 hover:shadow-xl transition-all duration-300" style={`border:solid; border-color: ${color}`}
>
  <div class="flex items-center gap-3 mb-4">
    <div
      class="w-12 h-12 rounded-xl flex items-center justify-center"
      style={`background-color: ${color}`}
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width={32}
        height={32}
        viewBox="0 0 32 32"
        class="w-fit h-fit"
        ><path fill="currentColor" d={icon}></path></svg>
    </div>
    <h3 class="text-2xl font-bold text-black">{title}</h3>
  </div>
  <div class="flex flex-wrap gap-2">
    {
      skills.map((item: Technology) => (
        <span
          class="px-4 py-2 text-white rounded-lg font-medium"
          style={`background-color: ${item.color}`}
        >
          {item.name}
        </span>
      ))
    }
  </div>
</div>
