---
import type { Technology } from '../interfaces/interface'

interface Props {
    title: string,
    devType: string,
    description: string,
    technologiesUsed: Technology[],
    githubUrl: string
}

const { title, devType, description, technologiesUsed, githubUrl } = Astro.props as Props;
---

<div
  class="bg-white bg-opacity-5 rounded-2xl overflow-hidden border border-cyan-500"
>
  <div class="p-6 lg:p-8">
    <!-- Título del proyecto -->
    <div class="flex items-start justify-between mb-4">
      <h3 class="text-2xl lg:text-3xl font-bold text-cyan-400">
        {title}
      </h3>
      <span
        class="px-4 py-2 bg-red-500 text-white rounded-lg text-sm font-medium"
      >
        {devType}
      </span>
    </div>

    <!-- Descripción -->
    <p class="text-gray-600 leading-relaxed mb-6">
      {description}
    </p>

    <!-- Tecnologías -->

    <div class="mb-4">
      <h4 class="text-sm font-semibold text-gray-400 uppercase mb-3">
        Tecnologías
      </h4>
      <div class="flex flex-wrap gap-2">
        {
            technologiesUsed.map((item: Technology) => (
                <span
          class='px-4 py-2 text-white rounded-lg text-sm font-medium' style={`background-color: ${item.color}`}
        >
          {item.name}
        </span>
            ))
        }
      </div>
    </div>

    <!-- Botones de acción -->
    <div class="flex flex-wrap gap-3 mt-6">
      <a
        href={githubUrl}
        class="px-6 py-2 bg-cyan-500 text-white font-semibold rounded-lg hover:bg-cyan-400 transition-all duration-300 flex items-center gap-2"
      >
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path
            d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
          ></path>
        </svg>
        Ver Código
      </a>
    </div>
  </div>
</div>
