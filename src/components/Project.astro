---
import type { Technology } from "../interfaces/interface";

interface Props {
  title: string;
  devType: string;
  description: string;
  technologiesUsed: Technology[];
  detailsUrl: string;
}

const { title, devType, description, technologiesUsed, detailsUrl } =
  Astro.props as Props;
---

<div
  class="bg-white bg-opacity-5 rounded-2xl overflow-hidden border border-cyan-500"
>
  <div class="p-6 lg:p-8">
    <!-- Título del proyecto -->
    <div class="flex items-start justify-between mb-4">
      <h3 class="text-2xl lg:text-3xl font-bold text-cyan-400">
        {title}
      </h3>
      <span
        class="px-4 py-2 bg-red-500 text-white rounded-lg text-sm font-medium"
      >
        {devType}
      </span>
    </div>

    <!-- Descripción -->
    <p class="text-gray-600 leading-relaxed mb-6">
      {description}
    </p>

    <!-- Tecnologías -->

    <div class="mb-4">
      <h4 class="text-sm font-semibold text-gray-400 uppercase mb-3">
        Tecnologías
      </h4>
      <div class="flex flex-wrap gap-2">
        {
          technologiesUsed.map((item: Technology) => (
            <span
              class="px-4 py-2 text-white rounded-lg text-sm font-medium"
              style={`background-color: ${item.color}`}
            >
              {item.name}
            </span>
          ))
        }
      </div>
    </div>

    <!-- Botones de acción -->
    <div class="flex flex-wrap gap-3 mt-6">
      <a
        href={detailsUrl}
        class="px-6 py-2 bg-cyan-500 text-white font-semibold rounded-lg hover:bg-cyan-400 transition-all duration-300 flex items-center gap-2"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
        >
          <path
            fill="currentColor"
            d="M20 3H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V5a2 2 0 0 0-2-2m-9 14H5v-2h6zm8-4H5v-2h14zm0-4H5V7h14z"
          ></path>
        </svg>
        Ver detalles
      </a>
    </div>
  </div>
</div>
