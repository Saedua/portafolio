      <div
        class="text-xs font-semibold text-gray-400 uppercase px-5 mb-2 tracking-wider"
      >
        Principal
      </div>
      <SideBarOptions
        icon="/house.png"
        title="Inicio"
        href="/"
      />
      <SideBarOptions
        icon="/person.png"
        title="About Me"
        href="/about"
      />
      <SideBarOptions
        icon="/project.png"
        title="Proyectos"
        href="/projects"
      />
